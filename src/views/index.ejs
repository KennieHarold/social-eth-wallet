<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/4.12.0/bootstrap-social.css"
      rel="stylesheet"
      type="text/css" />
    <title>Social Eth Wallet</title>
  </head>
  <body>
    <div class="container">
      <div class="w-75 shadow-lg bg-white p-5 mt-5 rounded-3 m-auto">
        <div class="mb-5">
          <h4 class="text-center">Social eth wallet</h4>
          <p class="text-secondary text-center">
            Instantly create your eth wallet after signing in
          </p>
        </div>
        <div class="d-flex flex-row">
          <div
            class="d-flex flex-column w-50 border border-1 border-top-0 border-bottom-0 border-start-0">
            <div
              class="w-75 d-flex flex-column justify-content-between"
              style="flex: 1">
              <a
                role="button"
                class="btn btn-social btn-google"
                href="/api/v1/auth/google">
                <span class="fa fa-google"></span> Sign in with Google
              </a>

              <a role="button" class="btn btn-social btn-facebook">
                <span class="fa fa-facebook"></span> Sign in with Facebook
              </a>

              <a role="button" class="btn btn-social btn-linkedin">
                <span class="fa fa-linkedin"></span> Sign in with LinkedIn
              </a>

              <a role="button" class="btn btn-social btn-twitter">
                <span class="fa fa-twitter"></span> Sign in with Twitter
              </a>
            </div>
          </div>
          <div class="d-flex flex-column w-50 align-items-end">
            <div class="w-75 d-flex flex-column">
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-email">
                  <span class="fa fa-envelope-o"></span>
                </span>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Email"
                  aria-label="Email" />
              </div>

              <div class="input-group mb-5">
                <span class="input-group-text" id="basic-password">
                  <span class="fa fa-key"></span>
                </span>
                <input
                  type="password"
                  class="form-control"
                  placeholder="Password"
                  aria-label="Password" />
              </div>

              <button type="button" class="btn btn-primary w-100">
                Signin with email
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.4.min.js"
      integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
      crossorigin="anonymous"></script>
  </body>
</html>
